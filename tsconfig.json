{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "jsx": "react",
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "pretty": true,
    "removeComments": false,
    "baseUrl": "./src",
    "lib": [
      "dom",
      "dom.iterable",
      "es2015",
      "es2016",
      "es2017.object",
      "scripthost"
    ]
  },
  "include": [
    "typings/*",
    "src/core/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "files": [
    "typings/lib.d.ts"
  ]
}